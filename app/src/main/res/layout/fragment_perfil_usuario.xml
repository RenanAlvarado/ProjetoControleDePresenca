<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marinho"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Foto do usuário -->
        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_usuario"
            android:contentDescription="Foto do usuário"
            android:layout_marginTop="42dp"
            android:background="@drawable/bg_conteudo_branco"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <!-- Nome do usuário -->
        <TextView
            android:id="@+id/textNomePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Usuário"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/textEmailPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="usuario@email.com"
            android:textColor="#DDDDDD"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Moldura branca com informações -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_conteudo_branco"
            android:padding="20dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/textInfoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informações Pessoais"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- Campos de exibição -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CPF: 123.456.789-00"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefone: (11) 98765-4321"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Endereço: Rua Exemplo, 123"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_marginBottom="6dp" />

        </LinearLayout>

        <!-- Botão para editar -->
        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/azul_cinza"
            android:layout_marginBottom="12dp" />

        <!-- Botão para sair -->
        <Button
            android:id="@+id/btnSairPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/bordo"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
