<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marinho"
    tools:context=".view.organizador.PerfilOrganizadorFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/imgPerfil"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/icn_perfil_2"
                    android:scaleType="centerCrop"
                    android:background="@drawable/profile_circle"
                    android:contentDescription="Foto de Perfil" />

                <ImageView
                    android:id="@+id/btnEditarFoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:padding="6dp"
                    android:background="@drawable/circle_white"
                    android:src="@drawable/ic_lapis"
                    android:contentDescription="Editar Foto"/>
            </FrameLayout>

            <EditText
                android:id="@+id/editNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@android:drawable/edit_text"
                android:hint="Nome completo"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="#000"/>

            <!-- CAMPOS DE SENHA ADICIONADOS -->
            <EditText
                android:id="@+id/editNovaSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:hint="Nova Senha (opcional)"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/editConfirmarSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:hint="Confirmar Nova Senha"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#000"/>

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Salvar Alterações"
                android:backgroundTint="#0D8C00"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnMudarParaOrganizador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mudar para modo Organizador"
                android:backgroundTint="@color/azul_cinza"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnMudarParaParticipante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mudar para modo Participante"
                android:backgroundTint="@color/azul_cinza"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnSair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Sair"
                android:backgroundTint="#B00020"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
