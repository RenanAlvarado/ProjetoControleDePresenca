<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marinho"
    tools:context=".ui.perfil.PerfilFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Cabeçalho -->
            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="135dp"
                android:layout_height="147dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/textNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arthur Portilio"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="arthur.portilio@email.com"
                android:textSize="14sp"
                android:textColor="#DDEAF7"
                android:layout_marginTop="4dp" />

            <!-- Anotações -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:padding="24dp"
                android:background="@drawable/bg_conteudo_branco">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notas do usuário"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/editAnotacoes"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:gravity="top"
                    android:hint="Adicione suas anotações aqui..."
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnSuporte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#0D8C00"
                        android:text="Suporte"
                        android:textColor="#FFF"
                        android:layout_marginEnd="8dp"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnSair"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#6B0A06"
                        android:text="Sair"
                        android:textColor="#FFF"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
