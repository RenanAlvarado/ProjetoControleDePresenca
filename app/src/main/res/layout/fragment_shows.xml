<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="16dp"
    android:background="@color/azul_marinho">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Criar Evento"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Card de Formulário -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/bg_conteudo_branco">

            <!-- Nome do Evento -->
            <EditText
                android:id="@+id/editNomeEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Evento"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="16sp" />

            <!-- Descrição -->
            <EditText
                android:id="@+id/editDescricao"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                android:hint="Descrição"
                android:gravity="top"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="16sp" />

            <!-- Local -->
            <EditText
                android:id="@+id/editLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Local do Evento"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="16sp" />

            <!-- Data e Hora -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/editDataNascimento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data do Evento"
                    android:padding="12dp"
                    android:layout_toLeftOf="@+id/btnCalendar"
                    android:layout_toStartOf="@+id/btnCalendar"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:background="@android:drawable/edit_text"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/btnCalendar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_calendario"
                    android:padding="4dp"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- Botão de Salvar -->
        <Button
            android:id="@+id/btnSalvarEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Evento"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/azul_cinza"
            android:layout_marginTop="24dp"
            android:padding="14dp" />

    </LinearLayout>

</ScrollView>