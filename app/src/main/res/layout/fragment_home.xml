<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marinho"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/scroll_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mensagem de boas-vindas -->
            <LinearLayout
                android:id="@+id/layoutBoasVindas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textSaudacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olá, Arthur"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textMensagem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bem-vindo ao time, fique de olho aqui!"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Bloco de informações do evento -->
            <LinearLayout
                android:id="@+id/layoutEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:padding="24dp"
                android:background="@drawable/bg_conteudo_branco">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evento Atual"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textNomeEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Makitos - São Paulo"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Presenças e Ausências lado a lado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textPresencas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Presenças:"
                            android:textColor="#0D8C00"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textAusencias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ausências:"
                            android:textColor="#B71C1C"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnVerRegistros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver registros"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/azul_cinza"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
