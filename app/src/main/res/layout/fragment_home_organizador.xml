<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marinho"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/scroll_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mensagem de boas-vindas -->
            <LinearLayout
                android:id="@+id/layoutBoasVindas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textSaudacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olá, Arthur"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textMensagem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bem-vindo ao time, fique de olho aqui!"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Lista de eventos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerEventos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                tools:listitem="@layout/item_evento" />

        </LinearLayout> <!-- ✅ FECHAMENTO FALTANTE -->

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>