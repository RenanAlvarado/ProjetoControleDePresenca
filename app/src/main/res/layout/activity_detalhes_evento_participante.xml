<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marinho"
    android:fitsSystemWindows="true">

    <!-- Botão Voltar -->
    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@color/transparent"
        android:contentDescription="Voltar"
        android:elevation="4dp"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_voltar_seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVoltar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Título -->
            <TextView
                android:id="@+id/txtTituloEvento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Título do Evento" />

            <!-- Card detalhes -->
            <LinearLayout
                android:id="@+id/cardDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_conteudo_branco"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTituloEvento">

                <TextView
                    android:id="@+id/txtDataHoraInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Início: DD/MM/AAAA às HH:MM" />

                <TextView
                    android:id="@+id/txtDataHoraFim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    tools:text="Fim: DD/MM/AAAA às HH:MM" />

                <TextView
                    android:id="@+id/txtLocalEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:textColor="@color/texto_principal"
                    tools:text="Local" />

                <TextView
                    android:id="@+id/txtDescricaoEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:textColor="@color/black"
                    tools:text="Descrição" />

                 <TextView
                    android:id="@+id/txtCriadoPor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:textStyle="italic"
                    android:textColor="@color/texto_subtitulo"
                    tools:text="Criado por: ..." />

                <TextView
                    android:id="@+id/txtEntradaLiberada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textStyle="italic"
                    android:textColor="@color/verde_musgo"
                    tools:text="Entrada liberada às: ..." />

                <TextView
                    android:id="@+id/txtPermiteReentrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textStyle="italic"
                    android:textColor="@color/azul_cinza"
                    tools:text="Reentrada: Não Permitida" />

            </LinearLayout>

            <!-- Status da Inscrição -->
            <TextView
                android:id="@+id/textStatusInscricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/status_entrou_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardDetails"
                tools:text="Inscrito ✅"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textInscricoesEncerradas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Inscrições encerradas."
                android:textColor="@color/cinza_medio"
                android:textSize="16sp"
                android:textStyle="italic"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textStatusInscricao"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnInscrever"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/verde_musgo"
                android:text="Inscrever-se"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInscricoesEncerradas" />

            <!-- BOTÃO DE IMPRESSÃO ADICIONADO -->
            <Button
                android:id="@+id/btnImprimirCertificado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Imprimir Certificado"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnInscrever"
                tools:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>