<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marinho"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/textTituloQr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meu QR Code"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp" />

        <!-- Instruções -->
        <TextView
            android:id="@+id/textInstrucao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apresente este QR Code para registrar sua entrada e saída do evento."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Moldura branca com o QR Code -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_conteudo_branco"
            android:padding="24dp"
            android:gravity="center">

            <!-- QR Code gerado dinamicamente -->
            <ImageView
                android:id="@+id/imgQrParticipante"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:contentDescription="QR Code do usuário"
                android:layout_marginBottom="16dp" />

            <!-- Dados do usuário -->
            <TextView
                android:id="@+id/textNomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Usuário"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textIdUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 12345"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botão para atualizar ou regenerar -->
        <Button
            android:id="@+id/btnAtualizarQr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atualizar QR Code"
            android:backgroundTint="@color/azul_cinza"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp" />

    </LinearLayout>
</ScrollView>
