<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marinho">

    <!-- Botão Voltar -->
    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Voltar"
        android:elevation="4dp"
        android:src="@drawable/ic_voltar_seta"
        android:padding="6dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnVoltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/txtTituloEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Título do Evento"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingBottom="16dp"/>

            <!-- Card detalhes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_conteudo_branco"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtDataEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data do Evento"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/txtLocalEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Local"
                    android:paddingTop="8dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/txtDescricaoEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descrição"
                    android:paddingTop="12dp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <!-- Título Inscritos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inscritos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingTop="26dp"/>

            <!-- Recycler de Inscritos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerInscritos"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:paddingTop="12dp"
                tools:listitem="@layout/item_inscrito"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>